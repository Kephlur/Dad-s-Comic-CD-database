<h4>Search for CDs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowSearchResultsCDs">
            <div class="form-group">
                <p>Search for an album name:</p>
                <label for="SearchPhraseName" class="control-label"></label>
                <input name="SearchPhraseName" class="form-control" />
            </div>
            <div class="form-group">
                <p>Search for an artist:</p>
                <label for="SearchPhraseArtist" class="control-label"></label>
                <input name="SearchPhraseArtist" class="form-control" />
            </div>
            <div class="form-group">
                <p>Search for a producer:</p>
                <label for="SearchPhraseProducer" class="control-label"></label>
                <input name="SearchPhraseProducer" class="form-control" />
            </div>
            <div class="form-group">
                <p>Search for an label:</p>
                <label for="SearchPhraseLabel" class="control-label"></label>
                <input name="SearchPhraseLabel" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

